<h1 class="big">Meet the Herd</h1>

<ul class="list">
    {{#each horses}}
        <li class="list-item col-1-2">
            <a class="big fancy-text light-link" href="/horses/{{this.id}}">{{this.name}}</a>
        </li>
    {{/each}}
</ul>

<div class="main-container">
    <div id="new-horse-form" class="flex-row form-block">
        <label class="input-group col-1-3">
            <input id="horse-name" class="input-group-input" type="text" name="name" value="{{horse.name}}">
            <span class="input-group-label">Name:</span>
        </label>

        <label class="input-group col-1-3">
            <input id="horse-breed" class="input-group-input" type="text" name="age" value="{{horse.breed}}">
            <span class="input-group-label">Breed:</span>
        </label>

        <label class="input-group col-1-3">
            <input id="horse-age" class="input-group-input" type="text" name="breed" value="{{horse.age}}">
            <span class="input-group-label">Age:</span>
        </label>
    </div>
    <button id="btn-submit" class="button dark">Submit</button>
    <button id="btn-add" class="button dark">Add a Horse</button>
</div>

<script type="x-template" id="horseTemplate">

    <li class="list-item col-1-2">
        <a class="big fancy-text light-link" href="/horses/\{{this.id}}">\{{this.name}}</a>
    </li>
</script>